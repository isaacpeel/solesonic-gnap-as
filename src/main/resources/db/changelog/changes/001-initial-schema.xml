<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="001" author="gnap-as">
        <!-- Client table -->
        <createTable tableName="client">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="instance_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="display_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="key_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="key_jwk" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Grant table -->
        <createTable tableName="grant_request">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="VARCHAR(36)">
                <constraints nullable="true" foreignKeyName="fk_grant_client" references="client(id)"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="redirect_uri" type="VARCHAR(2048)">
                <constraints nullable="true"/>
            </column>
            <column name="state" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Access Token table -->
        <createTable tableName="access_token">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="grant_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_token_grant" references="grant_request(id)"/>
            </column>
            <column name="token_value" type="VARCHAR(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="access_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="resource_server" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Interaction table -->
        <createTable tableName="interaction">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="grant_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_interaction_grant" references="grant_request(id)"/>
            </column>
            <column name="interaction_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="interaction_url" type="VARCHAR(2048)">
                <constraints nullable="true"/>
            </column>
            <column name="nonce" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="hash_method" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Resource table -->
        <createTable tableName="resource">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="grant_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_resource_grant" references="grant_request(id)"/>
            </column>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="resource_server" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="actions" type="VARCHAR(1024)">
                <constraints nullable="true"/>
            </column>
            <column name="locations" type="VARCHAR(1024)">
                <constraints nullable="true"/>
            </column>
            <column name="data_types" type="VARCHAR(1024)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>